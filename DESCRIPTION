BugReports: https://github.com/INWTlab/ireports/issues
URL: http://github.com/INWTlab/ireports
Depends:
  R (>= 3.4.0)
Imports:
  dplyr,
  DT,
  knitr,
  magrittr,
  rmarkdown,
  stringr,
  tinytex,
  templates,
  tidyr,
  xtable
Encoding: UTF-8
